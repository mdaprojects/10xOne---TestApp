@model IEnumerable<TestApp.Models.ViewModels.FeeCalculationVM>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Fee Calculation</h2>
        </div>
    </div>
    <br />
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Partner
                </th>
                <th>
                    Team Purchase
                </th>
                <th>
                    Total Purchase
                </th>
                <th>
                    Total Commission
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="25%">@item.PartnerName</td>
                    <td width="25%">@item.TeamPurchase.ToString("0.00")</td>
                    <td width="25%">@item.TotalPurchase.ToString("0.00")</td>
                    <td width="25%">@item.TotalCommission.ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="m-3 border border-info">
        <p class="m-3">Click to Calculate button to show calculated data.</p>
    </div>

}
