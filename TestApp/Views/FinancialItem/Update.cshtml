@model TestApp.Models.ViewModels.FinancialItemVM

<form method="post" asp-action="Update">
    <input asp-for="FinancialItem.Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Financial item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FinancialItem.Partner"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="FinancialItem.Date"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="FinancialItem.Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <select asp-for="FinancialItem.PartnerId" asp-items="@Model.PartnerDropDown" class="form-control">
                            <option selected>--Select Partner--</option>
                        </select>
                        <span asp-validation-for="FinancialItem.PartnerId" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="FinancialItem.Date" class="form-control" />
                        <span asp-validation-for="FinancialItem.Date" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="FinancialItem.Amount" class="form-control" />
                        <span asp-validation-for="FinancialItem.Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

